<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingVertical="@dimen/spacing_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font_medium"
                android:maxLines="2"
                android:text="News Title Placed Here"
                android:textColor="@color/textIconPrimary"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30,000 IDR"
                    android:fontFamily="@font/custom_font"
                    android:textColor="@color/textIconSecondary"
                    android:textSize="@dimen/txt_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_10"
                    android:fontFamily="@font/custom_font"
                    android:text="x"
                    android:textColor="@color/textIconSecondary"
                    android:textSize="@dimen/txt_small" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font"
                    android:gravity="center_horizontal"
                    android:text="5"
                    android:textColor="@color/textIconSecondary"
                    android:textSize="@dimen/txt_xsmall" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font_medium"
                    android:text="30,000 IDR"
                    android:textColor="@color/textIconSecondary"
                    android:textSize="@dimen/txt_small" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>