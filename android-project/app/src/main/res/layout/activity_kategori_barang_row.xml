<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_8"
    android:background="@drawable/card_dark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/spacing_10"
        android:background="@drawable/button_overlay"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/spacing_10"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="@dimen/spacing_14"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:orientation="horizontal">


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/bt_edit"
                    android:layout_width="@dimen/spacing_34"
                    android:layout_height="@dimen/spacing_25"
                    android:background="@drawable/button_overlay"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_4"
                    app:srcCompat="@drawable/baseline_edit_24"
                    app:tint="@color/textIconPrimary" />
                <ImageView
                    android:id="@+id/bt_remove"
                    android:layout_width="@dimen/spacing_34"
                    android:layout_height="@dimen/spacing_25"
                    android:background="@drawable/button_overlay"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_4"
                    app:srcCompat="@drawable/ic_delete"
                    app:tint="@color/textIconPrimary" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
