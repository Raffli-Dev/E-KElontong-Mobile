<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_8"
    android:background="@drawable/card_dark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/spacing_10"
        android:background="@drawable/button_overlay"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/spacing_10"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/spacing_70"
                    android:layout_height="wrap_content"
                    android:text="No Faktur"
                    android:textSize="@dimen/spacing_13"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium" />

                <View
                    android:layout_width="@dimen/spacing_13"
                    android:layout_height="0dp"/>

                <TextView
                    android:layout_width="@dimen/spacing_10"
                    android:layout_height="wrap_content"
                    app:fontFamily="sans-serif-medium"
                    android:textColor="@color/tx_dark"
                    android:text=":"
                    />

                <TextView
                    android:id="@+id/txt_no_faktur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginHorizontal="@dimen/spacing_4"
                    android:maxLines="1"
                    android:paddingBottom="1dp"
                    android:text="-"
                    android:textSize="@dimen/spacing_13"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_6"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="@dimen/spacing_70"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="@dimen/spacing_13"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium" />

                <View
                    android:layout_width="@dimen/spacing_13"
                    android:layout_height="0dp"/>

                <TextView
                    android:layout_width="@dimen/spacing_10"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium"
                    />

                <TextView
                    android:id="@+id/txt_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginHorizontal="@dimen/spacing_4"
                    android:maxLines="1"
                    android:paddingBottom="1dp"
                    android:text="-"
                    android:textSize="@dimen/spacing_13"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_6"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="@dimen/spacing_70"
                    android:layout_height="wrap_content"
                    android:text="Grand Total"
                    android:textSize="@dimen/spacing_13"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium" />

                <View
                    android:layout_width="@dimen/spacing_13"
                    android:layout_height="0dp"/>

                <TextView
                    android:layout_width="@dimen/spacing_10"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium"
                    />

                <TextView
                    android:id="@+id/txt_grand_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginHorizontal="@dimen/spacing_4"
                    android:maxLines="1"
                    android:paddingBottom="1dp"
                    android:text="-"
                    android:textSize="@dimen/spacing_13"
                    android:textColor="@color/tx_dark"
                    app:fontFamily="sans-serif-medium" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/lyt_detail"
                    style="@style/RippleStyleBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:clickable="true"
                    android:padding="@dimen/spacing_10"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/txt_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="DETAIL"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_small"
                        app:fontFamily="@font/custom_font_medium" />

                </com.balysv.materialripple.MaterialRippleLayout>


            </LinearLayout>


            

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
